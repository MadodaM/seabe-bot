generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Church {
  id             Int           @id @default(autoincrement())
  name           String
  code           String        @unique
  email          String?
  subaccountCode String        @default("PENDING")
  tosAcceptedAt  DateTime?
  createdAt      DateTime      @default(now())
  Ad             Ad[]
  events         Event[]
  members        Member[]
  News           News[]
  transactions   Transaction[]
  
// --- BACK RELATIONS ---
  members        Member[] @relation("ChurchLink")
  societyMembers Member[] @relation("SocietyLink")
}
  
}

model Member {
  id           Int      @id @default(autoincrement())
  
  // --- USER IDENTITY ---
  firstName    String
  lastName     String
  phone        String   @unique
  email        String?
  createdAt    DateTime @default(now())
  
  // --- LINK 1: THE CHURCH (Tithe/Offering) ---
  churchCode   String?
  church       Church?  @relation("ChurchLink", fields: [churchCode], references: [code])
  
  // --- LINK 2: THE SOCIETY (Policy/Dependents) ---
  societyCode  String?
  society      Church?  @relation("SocietyLink", fields: [societyCode], references: [code])

  // --- SOCIETY DATA ---
  status       String   @default("ACTIVE")
  policyNumber String?      
  joinedAt     DateTime @default(now())
  
  dependents   Dependent[]
}

// ðŸ‘‡ RESTORE THIS FULL MODEL AT THE BOTTOM
model Dependent {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  relation    String
  dateOfBirth DateTime?
  memberId    Int
  member      Member   @relation(fields: [memberId], references: [id])
  createdAt   DateTime @default(now())
}

enum OrgType {
  CHURCH
  BURIAL_SOCIETY
}

model Transaction {
  id         Int      @id @default(autoincrement())
  reference  String   @unique
  amount     Float
  type       String
  phone      String
  status     String   @default("PENDING")
  churchCode String
  date       DateTime @default(now())
  church     Church   @relation(fields: [churchCode], references: [code])
}

model Event {
  id         Int       @id @default(autoincrement())
  name       String
  date       String
  price      Float
  status     String    @default("Active")
  expiryDate DateTime?
  churchCode String
  church     Church    @relation(fields: [churchCode], references: [code])
}

model Ad {
  id          Int      @id @default(autoincrement())
  status      String   @default("Active")
  expiryDate  DateTime?
  createdAt   DateTime @default(now())
  churchId    Int
  content     String
  
  // ðŸ‘‡ ADD THIS LINE
  views       Int      @default(0)

  church      Church   @relation(fields: [churchId], references: [id])
}

model News {
  id          Int      @id @default(autoincrement())
  headline    String
  body        String?
  target      String   @default("Global")
  status      String   @default("Active")
  expiryDate  DateTime
  createdAt   DateTime @default(now())
  churchId    Int

  // ðŸ‘‡ CHANGE 'Church' TO 'church' (lowercase c)
  church      Church   @relation(fields: [churchId], references: [id])
}
