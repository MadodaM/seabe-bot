// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. CHURCHES & MEMBERS ---
model Church {
  id             Int      @id @default(autoincrement())
  name           String
  code           String   @unique // e.g. "GRACE123"
  email          String?
  subaccountCode String   @default("PENDING") // Paystack Subaccount
  tosAcceptedAt  DateTime?
  members        Member[]
  transactions   Transaction[]
  events         Event[]
  createdAt      DateTime @default(now())
  news        	News[]   // ‚¨ÖÔ∏è Add this line so the Church knows about its News
  ads          Ad[]     // ‚¨ÖÔ∏è Add this line
}

model Member {
  id         Int      @id @default(autoincrement())
  phone      String   @unique // WhatsApp Number
  churchCode String
  church     Church   @relation(fields: [churchCode], references: [code])
  email      String?
  createdAt  DateTime @default(now())
}

// --- 2. TRANSACTIONS ---
model Transaction {
  id         Int      @id @default(autoincrement())
  reference  String   @unique
  amount     Float
  type       String   // TITHE, OFFERING, EVENT
  phone      String
  status     String   @default("PENDING") // üî¥ NEW: PENDING / SUCCESS / FAILED
  churchCode String
  church     Church   @relation(fields: [churchCode], references: [code])
  date       DateTime @default(now())
}

// --- 3. EVENTS (Updated with Expiry) ---
model Event {
  id         Int       @id @default(autoincrement())
  name       String
  date       String    // Display text e.g. "Friday 7pm"
  price      Float
  status     String    @default("Active") // Active / Inactive
  expiryDate DateTime? // Auto-hide after this date
  churchCode String
  church     Church    @relation(fields: [churchCode], references: [code])
}

model News {
  id         Int      @id @default(autoincrement())
  headline   String
  body       String?
  target     String   @default("Global")
  status     String   @default("Active")
  expiryDate DateTime 
  createdAt  DateTime @default(now())
  churchId    Int
  church      Church   @relation(fields: [churchId], references: [id])
}

model Ad {
  id          Int      @id @default(autoincrement())
  content     String   // e.g. "üîß Plumber: Call John 082..."
  status      String   @default("Active")
  expiryDate  DateTime?
  createdAt   DateTime @default(now())

  churchId    Int
  church      Church   @relation(fields: [churchId], references: [id])
}