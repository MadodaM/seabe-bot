generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Church {
  id             Int           @id @default(autoincrement())
  name           String
  code           String        @unique
  email          String?
  subaccountCode String        @default("PENDING")
  tosAcceptedAt  DateTime?
  createdAt      DateTime      @default(now())
  Ad             Ad[]
  events         Event[]
  members        Member[]
  News           News[]
  transactions   Transaction[]
  
  
}

model Member {
  id         Int      @id @default(autoincrement())
  phone      String   @unique
  churchCode String
  email      String?
  createdAt  DateTime @default(now())
  church     Church   @relation(fields: [churchCode], references: [code])
}

model Transaction {
  id         Int      @id @default(autoincrement())
  reference  String   @unique
  amount     Float
  type       String
  phone      String
  status     String   @default("PENDING")
  churchCode String
  date       DateTime @default(now())
  church     Church   @relation(fields: [churchCode], references: [code])
}

model Event {
  id         Int       @id @default(autoincrement())
  name       String
  date       String
  price      Float
  status     String    @default("Active")
  expiryDate DateTime?
  churchCode String
  church     Church    @relation(fields: [churchCode], references: [code])
}

model Ad {
  id          Int      @id @default(autoincrement())
  status      String   @default("Active")
  expiryDate  DateTime?
  createdAt   DateTime @default(now())
  churchId    Int
  content     String
  
  // ðŸ‘‡ CHANGE 'Church' TO 'church' (lowercase c)
  church      Church   @relation(fields: [churchId], references: [id])
}

model News {
  id          Int      @id @default(autoincrement())
  headline    String
  body        String?
  target      String   @default("Global")
  status      String   @default("Active")
  expiryDate  DateTime
  createdAt   DateTime @default(now())
  churchId    Int

  // ðŸ‘‡ CHANGE 'Church' TO 'church' (lowercase c)
  church      Church   @relation(fields: [churchId], references: [id])
}
